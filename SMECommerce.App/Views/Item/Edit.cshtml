@model SMECommerce.App.Models.ItemModels.ItemEditVM

<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title-title">Item Create</h3>
                <p><a class="btn btn-primary icon-btn" asp-action="ItemList"><i class="fa fa-toggle-left"></i>Back</a></p>
            </div>
            <div class="tile-body">
                <form method="post">
                    <div class="form-group">
                        <label class="control-label">Code:</label>
                        <input asp-for="Code" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Category:</label>
                        <select id="drpEmpList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categoryList, "Id", "Name"))">
                            <option value="">--All--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Brand:</label>
                        <select id="drpEmpList" class="form-control" asp-for="BrandId" asp-items="@(new SelectList(Model.brandList, "Id", "Name"))">
                            <option value="">--All--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description:</label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Manufacture Date:</label>
                        <input asp-for="ManufactureDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Price:</label>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Status:</label>
                        <select asp-for="Status" class="form-control">
                            <option selected value="1">Active</option>
                            <option value="2">Inactive</option>
                        </select>
                    </div>
                    <div class="form-group" style="text-align:right;">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

}

