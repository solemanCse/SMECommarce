@model SMECommerce.App.Models.ItemModels.ItemCreateVM
 
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-title-w-btn">
                <h3 class="title-title">Item Create</h3>
                <p><a class="btn btn-primary icon-btn" asp-action="ItemList"><i class="fa fa-toggle-left"></i>Back</a></p>
            </div>
            <div class="tile-body">
                <form enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="control-label">Code:</label>
                        <input type="text" id="Code" name="Code" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name:</label>
                        <input type="text" id="Name" name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Category:</label>
                        <select id="drpEmpList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.categoryList, "Id", "Name"))">
                            <option value="">--All--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Brand:</label>
                        <select id="drpEmpList" class="form-control" asp-for="BrandId" asp-items="@(new SelectList(Model.brandList, "Id", "Name"))">
                            <option value="">--All--</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description:</label>
                        <input type="text" id="Description" name="Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Manufacture Date:</label>
                        <input type="date" id="ManufactureDate" name="ManufactureDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Price:</label>
                        <input type="text" id="Price" name="Price" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="custom-file">
                            <input asp-for="fileImage" class="custom-file-input" id="fileImage">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Status:</label>
                        <select id="Status" name="Status" class="form-control">
                            <option selected value="1">Active</option>
                            <option value="2">Inactive</option>
                        </select>
                    </div>
                    <div class="form-group" style="text-align:right;">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts{

}

