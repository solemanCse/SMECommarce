@model SMECommerce.App.Models.CategoryModels.CategoryEditVM
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-title-w-btn">
                    <h3 class="title-title">Category Edit</h3>
                    <p><a class="btn btn-primary icon-btn" asp-action="CategoryList"><i class="fa fa-toggle-left"></i>Back</a></p>
                </div>
                <div class="tile-body">
                    <form method="post">
                        <input asp-for="Id" class="form-control" hidden />
                        <div class="form-group">
                            <label class="control-label">Code:</label>
                            <input asp-for="Code" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Name:</label>
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description:</label>
                            <input asp-for="Descriptions" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Status:</label>
                            <select asp-for="Status" class="form-control">
                                <option selected value="1">Active</option>
                                <option value="2">Inactive</option>
                            </select>
                        </div>
                        <div class="form-group" style="text-align:right;">
                            <input type="submit" value="Submit" class="btn btn-warning" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
